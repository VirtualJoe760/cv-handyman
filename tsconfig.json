{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",  // Keep this to root
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@/components/*": [
        "./src/app/components/*"
      ],
      "@/constants/*": [
        "./src/constants/*"
      ],
      "@/utils/*": [
        "./src/utils/*"
      ],
      "@/types/*": [
        "./src/types/*",
      ],
      // Add the root alias below
      "@root/*": [
        "./../typescript*"
      ]
    },
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "next.config.mjs",
    ".next/types/**/*.ts",
    "src/utils/bulkCloudinaryUpload.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
